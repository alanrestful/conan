{
  "name" : "Parana Conan",
  "version" : "1.0.0",
  "description" : "Parana Web Auto Tester",
  "permissions": [ "cookies", "nativeMessaging", "storage", "tabs", "http://*/*", "https://*/*" ],
  "icons": { "16": "assest/images/logo.png", "48": "assest/images/logo.png", "128": "assest/images/logo.png" },
  "browser_action": {
    "default_icon": "assest/images/logo.png"
  },
  // 插件处理后台
  "background": {
    "scripts": ["assest/scripts/background.js"],
    "persistent": true
  },
  // 页面监听对象
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "css": ["assest/styles/content.css"],
      "js": ["assest/scripts/jquery.min.js", "assest/scripts/content.js"]
    }
  ],
  "manifest_version": 2
}
